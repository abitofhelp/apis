    name = "plugin",
    srcs = ["plugin.py"],
    legacy_create_init = False,
    main = "plugin.py",
    python_version = "PY3",
    srcs_version = "PY3",
    visibility = ["//:__subpackages__"],
    deps = [
        "@protobuf//:protobuf_python",
        requirement("grpclib"),
    ],
